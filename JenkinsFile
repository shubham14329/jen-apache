pipeline {
    agent {
        any
    }
    stages {
        stage('Clone repository') {
            steps {
                script {
                    def repoExists = false
                    try {
                        sh """ls /var/lib/jenkins/workspace/jen-apache"""
                        repoExists = true
                    } catch (Exception e) {
                        repoExists = false
                    }
                    if (repoExists) {
                        sh """sudo git -C /var/lib/jenkins/workspace/jen-apache pull https://github.com/shubham14329/jen-apache.git"""
                    } else {
                        sh """sudo git clone https://github.com/shubham14329/jen-apache.git /var/lib/jenkins/workspace/jen-apache"""
                    }
                }
            }
        }
        stage("Copying to apache") {
            steps {
                sh """
                sudo cp /var/lib/jenkins/workspace/jen-apache/*.html /var/www/html/
                """
            }
        }
    }
}
